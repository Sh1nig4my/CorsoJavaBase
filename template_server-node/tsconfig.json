{
    "compilerOptions": {
      "target": "es2016",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "rootDir": "./src",
      "sourceMap": true
    },
    "include": ["src/**/*", "src/index.ts"],
    "exclude": ["node_modules"]
  }